app.directive('xmlViewer', function() {
    return {
      restrict: 'C',
      link: function postLink(scope, element, attrs) {
        scope.$watch('aws.input', function() {
          if(_.get(scope, "aws.input") && scope.isXML(scope.aws.input.replaceAll("\\",""))) {
            element.text(vkbeautify.xml(scope.utf8ToUnicode(scope.aws.input.replaceAll("\\","")), 4));
          }
        });
      }
    };
  });


